<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CO_VM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CO_VM.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .navbar-custom {
            background: linear-gradient(90deg, #e3f2fd 0%, #90caf9 100%);
            box-shadow: 0 4px 20px 0 rgba(33, 150, 243, 0.15);
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link,
            .navbar-custom .dropdown-toggle {
                color: #1565c0 !important;
                font-weight: 600;
                letter-spacing: 1px;
            }

                .navbar-custom .nav-link.active,
                .navbar-custom .nav-link:focus,
                .navbar-custom .nav-link:hover,
                .navbar-custom .dropdown-item:hover {
                    color: #fff !important;
                    background-color: #1976d2 !important;
                    border-radius: 0.5rem;
                }

            .navbar-custom .dropdown-menu {
                background: #e3f2fd;
                border-radius: 0.5rem;
                border: none;
                box-shadow: 0 2px 8px rgba(33, 150, 243, 0.10);
            }

            .navbar-custom .dropdown-item {
                color: #1565c0;
                font-weight: 500;
            }

                .navbar-custom .dropdown-item.active,
                .navbar-custom .dropdown-item:active {
                    background-color: #1976d2;
                    color: #fff;
                }

            .navbar-custom .navbar-brand img {
                border: 2px solid #1976d2;
                box-shadow: 0 2px 8px rgba(33, 150, 243, 0.10);
            }

        .welcome-admin {
            margin-left: 350px;
            color: #1976d2;
            font-weight: bold;
            text-shadow: 1px 1px 8px #e3f2fd;
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom fixed-top py-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="">
                    <img src="~/newlogo.jpg" alt="Avatar Logo" style="width:50px;" class="rounded-pill">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar" aria-controls="mynavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mynavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a href="@Url.Action("AdminHome", "Admin")" class="nav-link px-3">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle px-3" id="usersDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Manage Users</a>
                            <ul class="dropdown-menu" aria-labelledby="usersDropdown">
                                <li><a href="@Url.Action("AddUser","Admin")" class="dropdown-item">Add</a></li>
                                <li><a href="@Url.Action("UpdateUser","Admin")" class="dropdown-item">Update</a></li>
                                <li><a href="@Url.Action("DeleteUser","Admin")" class="dropdown-item">Delete</a></li>
                                <li><a href="@Url.Action("ViewUser","Admin")" class="dropdown-item">View</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle px-3" id="vaccinesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Manage Vaccines</a>
                            <ul class="dropdown-menu" aria-labelledby="vaccinesDropdown">
                                <li><a href="@Url.Action("AddVaccine","Admin")" class="dropdown-item">Add</a></li>
                                <li><a href="@Url.Action("UpdateVaccine","Admin")" class="dropdown-item">Update</a></li>
                                <li><a href="@Url.Action("DeleteVaccine","Admin")" class="dropdown-item">Delete</a></li>
                                <li><a href="@Url.Action("ViewVaccine","Admin")" class="dropdown-item">View</a></li>
                            </ul>
                        </li>
                        @* <li class="nav-item dropdown"> *@
                        @*     <a href="#" class="nav-link dropdown-toggle px-3" id="centersDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Manage Centers</a> *@
                        @*     <ul class="dropdown-menu" aria-labelledby="centersDropdown"> *@
                        @*         <li><a href="@Url.Action("AddCenter","Admin")" class="dropdown-item">Add</a></li> *@
                        @*         <li><a href="@Url.Action("DeleteCenter","Admin")" class="dropdown-item">Delete</a></li> *@
                        @*     </ul> *@
                        @* </li> *@
                    </ul>
                    <div class="welcome-admin d-none d-lg-block">
                        <h2>WELCOME ADMIN!!!</h2>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div style="margin-top: 100px;">
        @RenderBody()
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
